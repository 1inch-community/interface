{
  "name": "widgets",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/widgets/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "env": {
          "libName": "widgets"
        },
        "commands": [
          "ts-node --project ./tools/packagr/tsconfig.json tools/packagr/main.ts"
        ]
      }
    },
    "watch": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "node tools/esbuild/build.mjs --lib-name widgets --watch"
        ]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs widgets {args.ver} {args.tag}",
      "dependsOn": ["build"]
    }
  },
  "tags": []
}
