{
  "name": "widgets",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/widgets/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "env": {
          "libName": "widgets"
        },
        "commands": [
          "pnpm run build:lib"
        ]
      }
    },
    "watch": {
      "executor": "nx:run-commands",
      "options": {
        "env": {
          "libName": "widgets",
          "isWatch": true
        },
        "commands": [
          "pnpm run build:lib"
        ]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs widgets {args.ver} {args.tag}",
      "dependsOn": ["build"]
    }
  },
  "tags": []
}
