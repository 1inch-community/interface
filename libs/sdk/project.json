{
  "name": "sdk",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/sdk/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "rollup -c libs/sdk/rollup.config.js --bundleConfigAsCjs"
        ]
      }
    },
    "watch": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "rollup -c libs/sdk/rollup.config.js --bundleConfigAsCjs -w --watch.buildDelay 500"
        ]
      }
    },
    "publish": {
      "command": "node tools/scripts/publish.mjs sdk {args.ver} {args.tag}",
      "dependsOn": ["build"]
    }
  },
  "tags": []
}
