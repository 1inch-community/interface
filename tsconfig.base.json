{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "rootDir": ".",
    "baseUrl": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2022",
    "module": "esnext",
    "lib": ["es2022", "dom"],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "typeRoots": [
      "./dist/libs/models",
      "./dist/libs/sdk",
      "./dist/libs/lit",
      "./dist/libs/ui-components/async",
      "./dist/libs/ui-components/button",
      "./dist/libs/ui-components/card",
      "./dist/libs/ui-components/icon",
      "./dist/libs/ui-components/lit",
      "./dist/libs/ui-components/overlay",
      "./dist/libs/ui-components/scene",
      "./dist/libs/ui-components/segmented-control",
      "./dist/libs/ui-components/theme",
      "./node_modules/@types"
    ],
    "plugins": [
      {
        "name": "ts-lit-plugin",
        "strict": true
      }
    ],
    "paths": {
      "@one-inch-community/models": [
        "dist/libs/models/index",
        "dist/libs/models/*"
      ],
      "@one-inch-community/lit": [
        "dist/libs/lit/index",
        "dist/libs/lit/*"
      ],
      "@one-inch-community/sdk": [
        "dist/libs/sdk/index",
        "dist/libs/sdk/*"
      ],
      "@one-inch-community/ui-components/*": [
        "dist/libs/ui-components/*"
      ],
      "@one-inch-community/widgets/*": [
        "dist/libs/widgets/*"
      ]
    }
  },
  "exclude": ["node_modules", "tmp", "dist", ".nx"]
}
