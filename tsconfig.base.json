{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "rootDir": ".",
    "baseUrl": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2022",
    "module": "esnext",
    "lib": ["es2022", "dom"],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "skipDefaultLibCheck": true,
    "plugins": [
      {
        "name": "ts-lit-plugin",
        "strict": true
      }
    ],
    "paths": {
      "@one-inch-community/models": [
        "dist/libs/models/index",
        "dist/libs/models/*"
      ],
      "@one-inch-community/sdk": [
        "dist/libs/sdk/index",
        "dist/libs/sdk/*"
      ],
      "@one-inch-community/ui-components/*": [
        "dist/libs/ui-components/*"
      ],
      "@one-inch-community/widgets/*": [
        "dist/libs/widgets/*"
      ],
    }
  },
  "exclude": ["node_modules", "tmp"]
}
