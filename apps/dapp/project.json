{
  "name": "dapp",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/dapp/src",
  "tags": [],
  "targets": {
    "build-and-deploy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nx run dapp:build && firebase deploy"
      },
      "dependsOn": [
        "^build"
      ]
    },
    "build:electron": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nx run dapp:build",
        "env": {
          "OUT_DIR": "../../apps/electron-dapp/src/renderer"
        }
      }
    }
  }
}
