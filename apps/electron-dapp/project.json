{
  "name": "electron-dapp",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/electron-dapp",
  "tags": [],
  "targets": {
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/electron-dapp",
        "command": "electron-vite dev"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/electron-dapp",
        "parallel": false,
        "env": {
          "killClone": "true"
        },
        "commands": [
          "nx run one-inch-community:build-all-libs",
          "nx run dapp:build:electron",
          "electron-vite build --entry ./out/main/index.js",
          "electron-builder -c ./electron-builder.yml build --mac --arm64 -p never",
          "electron-builder -c ./electron-builder.yml build --linux --arm64 -p never",
          "electron-builder -c ./electron-builder.yml build --linux --x64 -p never",
          "electron-builder -c ./electron-builder.yml build --win --arm64 -p never",
          "electron-builder -c ./electron-builder.yml build --win --x64 -p never"
        ]
      }
    }
  }
}
