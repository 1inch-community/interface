{
  "name": "one-inch-community",
  "$schema": "node_modules/nx/schemas/project-schema.json",
  "targets": {
    "start": {
      "executor": "nx:run-commands",
      "options": {
        "parallel": true,
        "commands": [
          "nx run one-inch-community:watch-all-libs",
          "nx run dapp:serve"
        ]
      }
    },
    "build-all-libs": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "ts-node --project ./tools/packagr/tsconfig.json tools/packagr/main.ts"
        ]
      }
    },
    "watch-all-libs": {
      "executor": "nx:run-commands",
      "options": {
        "env": {
          "isWatch": true
        },
        "commands": [
          "ts-node --project ./tools/packagr/tsconfig.json tools/packagr/main.ts"
        ]
      }
    }
  }
}
